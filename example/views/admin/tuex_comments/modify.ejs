<div class="layui-fluid">
  <div class="layui-card">
    <div class="layui-card-body" style="padding: 15px;">
      <form class="layui-form" action="" lay-filter="component-form-group">
        <% if (tuex_comments.id) { %>
        <input type="hidden" value="<%= tuex_comments.id %>" name="id">
        <% } %>

        <div class="layui-form-item">
          <label class="layui-form-label">student_id</label>
          <div class="layui-input-block">
            <input type="text" name="student_id" lay-verify="student_id"
                   value="<%= tuex_comments.student_id ? tuex_comments.student_id : '' %>" placeholder="请输入student_id" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">order_item_id</label>
          <div class="layui-input-block">
            <input type="text" name="order_item_id" lay-verify="order_item_id"
                   value="<%= tuex_comments.order_item_id ? tuex_comments.order_item_id : '' %>" placeholder="请输入order_item_id" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">course_id</label>
          <div class="layui-input-block">
            <input type="text" name="course_id" lay-verify="course_id"
                   value="<%= tuex_comments.course_id ? tuex_comments.course_id : '' %>" placeholder="请输入course_id" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">type</label>
          <div class="layui-input-block">
            <input type="text" name="type" lay-verify="type"
                   value="<%= tuex_comments.type ? tuex_comments.type : '0' %>" placeholder="请输入type" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">type_id</label>
          <div class="layui-input-block">
            <input type="text" name="type_id" lay-verify="type_id"
                   value="<%= tuex_comments.type_id ? tuex_comments.type_id : '' %>" placeholder="请输入type_id" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">score</label>
          <div class="layui-input-block">
            <input type="text" name="score" lay-verify="score"
                   value="<%= tuex_comments.score ? tuex_comments.score : '0' %>" placeholder="请输入score" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">content</label>
          <div class="layui-input-block">
            <input type="text" name="content" lay-verify="content"
                   value="<%= tuex_comments.content ? tuex_comments.content : '' %>" placeholder="请输入content" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">pic</label>
          <div class="layui-input-block">
            <input type="text" name="pic" lay-verify="pic"
                   value="<%= tuex_comments.pic ? tuex_comments.pic : '' %>" placeholder="请输入pic" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">display_status</label>
          <div class="layui-input-block">
            <input type="text" name="display_status" lay-verify="display_status"
                   value="<%= tuex_comments.display_status ? tuex_comments.display_status : '0' %>" placeholder="请输入display_status" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">sorted_num</label>
          <div class="layui-input-block">
            <input type="text" name="sorted_num" lay-verify="sorted_num"
                   value="<%= tuex_comments.sorted_num ? tuex_comments.sorted_num : '1' %>" placeholder="请输入sorted_num" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item layui-layout-admin">
          <div class="layui-input-block">
            <div class="layui-footer" style="left: 0;">
              <button class="layui-btn" lay-submit="" lay-filter="component-form-submit">立即提交</button>
              <button id="reset" type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  layui.use(['form', 'laydate'], function () {
    var $ = layui.$, layer = layui.layer, form = layui.form;

    /* 自定义验证规则 */
    form.verify({
      type: function (value, item) {
        if (!value.trim()) {
          return 'type不能为空';
        }
        var reg = /^(\-|\+)?\d+(\.\d+)?$/;
        if(!reg.test(value.trim())) {
          return 'type必须是数字';
        }
        var reg = /^[0-9]+$/;
        if(!reg.test(value.trim())) {
          return 'type必须是整数';
        }
      },
      type_id: function (value, item) {
        if (value.trim().length > 32) {
          return 'type_id的长度必须小于32';
        }
      },
      score: function (value, item) {
        if (!value.trim()) {
          return 'score不能为空';
        }
        var reg = /^(\-|\+)?\d+(\.\d+)?$/;
        if(!reg.test(value.trim())) {
          return 'score必须是数字';
        }
      },
      content: function (value, item) {
        if (value.trim().length > 400) {
          return 'content的长度必须小于400';
        }
      },
      pic: function (value, item) {
        if (value.trim().length > 100) {
          return 'pic的长度必须小于100';
        }
      },
      display_status: function (value, item) {
        if (!value.trim()) {
          return 'display_status不能为空';
        }
        var reg = /^(\-|\+)?\d+(\.\d+)?$/;
        if(!reg.test(value.trim())) {
          return 'display_status必须是数字';
        }
        var reg = /^[0-9]+$/;
        if(!reg.test(value.trim())) {
          return 'display_status必须是整数';
        }
      },
      sorted_num: function (value, item) {
        if (!value.trim()) {
          return 'sorted_num不能为空';
        }
        var reg = /^(\-|\+)?\d+(\.\d+)?$/;
        if(!reg.test(value.trim())) {
          return 'sorted_num必须是数字';
        }
        var reg = /^[0-9]+$/;
        if(!reg.test(value.trim())) {
          return 'sorted_num必须是整数';
        }
      },
    });

    /* 监听提交 */
    form.on('submit(component-form-submit)', function (data) {
      var loading = layer.load(1);
      $.post('/admin/tuex_comments/modify', data.field, function (data) {
        layer.close(loading);
        if (data.errCode === 0) {
          layer.msg(data.msg, {
            icon: 6,
            time: 2000
          }, function() {
            window.location.reload();
          });
        } else {
          layer.msg(data.msg, {icon: 5});
        }
      });
      return false;
    });
  });
</script>
