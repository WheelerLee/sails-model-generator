<div class="layui-fluid">
  <div class="layui-card">
    <div class="layui-card-body" style="padding: 15px;">
      <form class="layui-form" action="" lay-filter="component-form-group">
        <% if (tuex_teacher_school.id) { %>
        <input type="hidden" value="<%= tuex_teacher_school.id %>" name="id">
        <% } %>

        <div class="layui-form-item">
          <label class="layui-form-label">teacher_id</label>
          <div class="layui-input-block">
            <input type="text" name="teacher_id" lay-verify="teacher_id"
                   value="<%= tuex_teacher_school.teacher_id ? tuex_teacher_school.teacher_id : '' %>" placeholder="请输入teacher_id" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">name</label>
          <div class="layui-input-block">
            <input type="text" name="name" lay-verify="name"
                   value="<%= tuex_teacher_school.name ? tuex_teacher_school.name : '' %>" placeholder="请输入name" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">start_date</label>
          <div class="layui-input-block">
            <input type="text" name="start_date" lay-verify="start_date"
                   value="<%= tuex_teacher_school.start_date ? tuex_teacher_school.start_date : '' %>" placeholder="请输入start_date" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">end_date</label>
          <div class="layui-input-block">
            <input type="text" name="end_date" lay-verify="end_date"
                   value="<%= tuex_teacher_school.end_date ? tuex_teacher_school.end_date : '' %>" placeholder="请输入end_date" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">degree</label>
          <div class="layui-input-block">
            <input type="text" name="degree" lay-verify="degree"
                   value="<%= tuex_teacher_school.degree ? tuex_teacher_school.degree : '' %>" placeholder="请输入degree" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">subject</label>
          <div class="layui-input-block">
            <input type="text" name="subject" lay-verify="subject"
                   value="<%= tuex_teacher_school.subject ? tuex_teacher_school.subject : '' %>" placeholder="请输入subject" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">sorted_num</label>
          <div class="layui-input-block">
            <input type="text" name="sorted_num" lay-verify="sorted_num"
                   value="<%= tuex_teacher_school.sorted_num ? tuex_teacher_school.sorted_num : '1' %>" placeholder="请输入sorted_num" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item layui-layout-admin">
          <div class="layui-input-block">
            <div class="layui-footer" style="left: 0;">
              <button class="layui-btn" lay-submit="" lay-filter="component-form-submit">立即提交</button>
              <button id="reset" type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  layui.use(['form', 'laydate'], function () {
    var $ = layui.$, layer = layui.layer, form = layui.form;

    /* 自定义验证规则 */
    form.verify({
      name: function (value, item) {
        if (value.trim().length > 100) {
          return 'name的长度必须小于100';
        }
      },
      start_date: function (value, item) {
        if (value.trim().length > 100) {
          return 'start_date的长度必须小于100';
        }
      },
      end_date: function (value, item) {
        if (value.trim().length > 100) {
          return 'end_date的长度必须小于100';
        }
      },
      subject: function (value, item) {
        if (value.trim().length > 100) {
          return 'subject的长度必须小于100';
        }
      },
      sorted_num: function (value, item) {
        if (!value.trim()) {
          return 'sorted_num不能为空';
        }
        var reg = /^(\-|\+)?\d+(\.\d+)?$/;
        if(!reg.test(value.trim())) {
          return 'sorted_num必须是数字';
        }
        var reg = /^[0-9]+$/;
        if(!reg.test(value.trim())) {
          return 'sorted_num必须是整数';
        }
      },
    });

    /* 监听提交 */
    form.on('submit(component-form-submit)', function (data) {
      var loading = layer.load(1);
      $.post('/admin/tuex_teacher_school/modify', data.field, function (data) {
        layer.close(loading);
        if (data.errCode === 0) {
          layer.msg(data.msg, {
            icon: 6,
            time: 2000
          }, function() {
            window.location.reload();
          });
        } else {
          layer.msg(data.msg, {icon: 5});
        }
      });
      return false;
    });
  });
</script>
