          <div class="layui-input-block">
            <input type="text" name="course_date" lay-verify="course_date"
                   value="<%= tuex_courseorderitem.course_date ? tuex_courseorderitem.course_date : '' %>" placeholder="请输入course_date" autocomplete="off" class="layui-input">
          </div>
        </div>
