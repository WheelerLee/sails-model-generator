          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">answer</label>
          <div class="layui-input-block">
            <input type="text" name="answer" lay-verify="answer"
                   value="<%= tuex_question.answer ? tuex_question.answer : '' %>" placeholder="请输入answer" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">have_answer</label>
          <div class="layui-input-block">
            <input type="text" name="have_answer" lay-verify="have_answer"
                   value="<%= tuex_question.have_answer ? tuex_question.have_answer : '0' %>" placeholder="请输入have_answer" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">is_select</label>
          <div class="layui-input-block">
            <input type="text" name="is_select" lay-verify="is_select"
                   value="<%= tuex_question.is_select ? tuex_question.is_select : '0' %>" placeholder="请输入is_select" autocomplete="off" class="layui-input">
          </div>
        </div>
